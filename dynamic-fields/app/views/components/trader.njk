{% from "govuk/components/table/macro.njk" import govukTable %}

<div class="govuk-!-margin-bottom-8">
  {{ govukTable({
    caption: component.label,
    captionClasses: "govuk-table__caption--m",
    firstCellIsHeader: false,
    classes: "govuk-!-margin-bottom-2",
    head: [
      { text: "Name" },
      { text: "Address" },
      { text: "Country" },
      { text: "" }
    ],
    rows: [
      [
        { text: component.value.name },
        { text: component.value.address },
        { text: component.value.country },
        { html: "<a href='/traders/{{ component.name }}/search' class='govuk-link'>Change</a>" if component.isTraderEntered else "&nbsp;" }
      ]
    ]
  }) }}

  {% if not component.isTraderEntered %}
    <a class="govuk-link govuk-!-font-size-19" href="/add-{{ component.name }}">Add a {{ component.label }}</a>
  {% endif %}
</div>
