{% extends "layouts/main.njk" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ pageName }}</h1>
      <form class="form" method="post">
        <p class="govuk-body">
          I, the undersigned operator responsible for the consignment detailed above, certify that
          to the best of my knowledge and belief the statements made in Part I of this document are
          true and complete, and I agree to comply with the requirements of retained Regulation 2017/625
          on official controls, including payment for official controls, as well as for re-dispatching
          consignments, quarantine or isolation of consignments, or costs of destruction and disposal
          where necessary.
        </p>

        <p class="govuk-body govuk-!-margin-bottom-8">
          Date of declaration: <span id="date-of-declaration">{{ submissionDate }}</span>
        </p>

        <div class="govuk-!-margin-bottom-4">
          {{ govukButton({
            text: "Submit declaration",
            name: "action",
            value: "declare",
            classes: "govuk-!-margin-bottom-0"
          }) }}
        </div>
      </form>
    </div>
  </div>

  <hr class="govuk-section-break govuk-section-break--visible govuk-section-break--l">

{% endblock %}
